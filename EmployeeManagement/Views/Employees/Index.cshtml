@model IEnumerable<EmployeeManagement.Models.Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Employees</h2>
@Html.ActionLink("Create Employee", "Create", null, new { @class="btn btn-primary"})
<table class="table table-hover table-bordered" style="margin: 6px 0;">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Department.Name</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=employee.Id }, new {  @class= "btn btn-success"})
                    @Html.ActionLink("Delete", "Delete", new { id = employee.Id }, new { @class = "btn btn-danger", onclick="return confirm('Are you sure you want to delete this Employee')" })
                </td>
            </tr>
         }


            
        </tbody>
</table>

